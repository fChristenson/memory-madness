<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="se.fredrik.memorymadness.MainActivity">

    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="@dimen/progress_bar_width"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/score"
            style="@style/scoreButtonTheme"
            android:text="@string/score_text" />

        <TextView
            android:id="@+id/combo"
            style="@style/scoreButtonTheme"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/combo_text" />

        <TextView
            android:id="@+id/best"
            style="@style/scoreButtonTheme"
            android:text="@string/best_text" />
    </LinearLayout>

    <GridView
        android:id="@+id/card_container"
        android:layout_width="@dimen/card_row_width"
        android:layout_height="match_parent"
        android:verticalSpacing="-12dp"
        android:horizontalSpacing="-62dp"
        android:numColumns="6"
        android:layout_marginStart="22dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/progress_bar"
        android:layout_toEndOf="@+id/progress_bar" />

    <FrameLayout
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000"
        android:layout_alignParentBottom="true"
        android:clickable="false"
        android:contextClickable="false"
        android:visibility="gone"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:textSize="30dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:text="You won, such wow!"
            android:clickable="false"
            android:id="@+id/overlayText" />
    </FrameLayout>

</RelativeLayout>
